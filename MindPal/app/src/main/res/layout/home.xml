<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
    android:id="@+id/imgLogo"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:src="@drawable/logo"/>

    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="24dp"
        android:text="Welcome To MindPal \n How Are You Today?"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStatusToday"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="â€œSmall steps every day lead to big changes.â€"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="#888888"/>

    <TextView
        android:id="@+id/txtStatusToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWelcome"
        android:layout_marginTop="522dp"
        android:text="Todayâ€™s mood: ðŸ˜Š Good\nNo consultation scheduled"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnProf"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/txtWelcome"
        android:layout_marginTop="55dp"
        android:text="Professional" />

    <Button
        android:id="@+id/btnNotif"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/btnProf"
        android:layout_marginTop="8dp" android:text="Notifications" />

</RelativeLayout>